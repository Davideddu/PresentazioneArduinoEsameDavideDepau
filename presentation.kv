#:kivy 1.8.0
#:import Window kivy.core.window.Window

<Root>:
    sm: sm
    controls: controls

    SlideManager:
        id: sm
        pos: root.pos
        size: root.size

    BoxLayout:
        id: controls
        ddbutton: ddbutton
        orientation: "horizontal"
        size_hint: None, None
        pos_hint: {"right": 1, "y": 0}
        height: "40dp"
        width: min(root.width, dp(500))
        opacity: .8

        Button:
            id: ddbutton

        Button:
            size_hint_x: None
            width: "40dp"
            on_release: root.sm.prev_slide()

            Image:
                source: "data/images/arrow_left.png"
                center: self.parent.center
                size: dp(32), dp(32)
                nocache: False

        Button:
            size_hint_x: None
            width: "40dp"
            on_release: root.sm.next_slide()

            Image:
                source: "data/images/arrow_right.png"
                center: self.parent.center
                size: dp(32), dp(32)
                nocache: False

        Button:
            size_hint_x: None
            width: "40dp"
            on_release: setattr(Window, "fullscreen", not Window.fullscreen)

            Image:
                source: "data/images/exit_fullscreen.png" if Window.fullscreen else "data/images/fullscreen.png"
                center: self.parent.center
                size: dp(32), dp(32)
                nocache: False

